<%= form_with(model: [:admin, @article], local: true, html: { enctype: "multipart/form-data" }) do |form| %>
  <% waiting = @article.status == "wating_for_review" %>

  <% if @article.errors.any? %>
    <!-- Error block ... (เหมือนเดิม) -->
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <div class="space-y-8 md:col-span-1">
      <div>
        <%= form.label :title, "Article Title", class: "block text-gray-900 font-semibold mb-3" %>
        <%= form.text_field :title, 
              placeholder: "Enter article title", 
              class: "w-full rounded-xl border ...", 
              disabled: waiting %>
      </div>
      <div>
        <%= form.label :cover_image, "Cover Image", class: "block text-gray-900 font-semibold mb-3" %>
        <%= form.file_field :cover_image, 
              class: "block w-full text-gray-700 ...", 
              disabled: waiting %>
      </div>
    </div>

    <div class="md:col-span-2">
      <%= form.label :description, "Content / Description", class: "block text-gray-900 font-semibold mb-3" %>
      <%= form.text_area :description, 
            rows: 12, 
            placeholder: "Write your article content here...", 
            class: "w-full h-full rounded-xl border ...", 
            disabled: waiting %>
    </div>
  </div>

  <div class="flex items-center space-x-5 mt-20">
    <% unless waiting %>
      <%= form.submit "Save Article", 
            class: "flex-1 py-3 bg-blue-600 hover:bg-blue-700 ..." %>
    <% end %>
    <%= link_to "Cancel", admin_articles_path, 
          class: "flex-1 text-center py-3 bg-gray-100 ..." %>
  </div>
<% end %>