<div class="max-w-6xl mx-auto px-4">
  <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8 gap-4 w-full">
    <div class="md:flex-1">
      <h1 class="text-3xl font-extrabold text-gray-900">Admin Panel Â· Manage Articles</h1>
      <p class="text-gray-600 max-w-xl mt-2 text-base">
        Manage, create, edit, and delete all articles shown to regular users.<br>
        Click <b>Create New Article</b> to add new content, or press <b>Show</b> to view details and make edits.
      </p>
    </div>
    <div>
      <%= link_to "Create New Article", new_admin_article_path, class: "px-6 py-3 bg-blue-700 hover:bg-blue-800 text-white rounded-lg font-bold shadow-lg text-lg transition" %>
    </div>
  </div>

  <div id="articles" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-7">
    <% @articles.each do |article| %>
      <div class="bg-white border border-gray-200 rounded-xl shadow-lg p-6 flex flex-col">
        <% if article.cover_image.attached? %>
          <%= image_tag article.cover_image, alt: article.title, class: "w-full h-40 object-cover mb-4 rounded-md shadow" %>
        <% else %>
          <div class="w-full h-40 bg-gray-100 rounded-md mb-4 flex items-center justify-center text-gray-300 text-lg font-semibold">
            No Image Available
          </div>
        <% end %>
        <h2 class="text-xl font-bold mb-1 truncate"><%= article.title %></h2>
        <div class="text-gray-500 text-sm mb-4 whitespace-pre-line line-clamp-3"><%= article.description.to_s.truncate(90) %></div>
        <div class="mt-auto flex justify-end">
          <%= link_to "Show", [:admin, article], class: "px-4 py-2 bg-gray-800 text-white font-semibold rounded hover:bg-gray-600 transition" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
